<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Customer:"
            android:textSize="20sp"
            android:textColor="#23A7D8"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="match_parent"
            android:id="@+id/txtNameComputerDetail"
            android:textSize="20sp"
            android:textColor="#23A7D8"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <TextView
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Bonus into account:"
            android:textSize="20sp"
            android:textColor="#23A7D8"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:id="@+id/txtPriceComputerDetail"
            android:textSize="20sp"
            android:textColor="#22d25a"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/txtTimeComputerDetail"
        android:text="10:30:25 29/05/2018"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#23A7D8"
        />
</LinearLayout>